<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
</head>
<body>
  <h1>Assign Trainee to Course</h1>
  <div class="container">
    <form action="/trainingStaff/assignTrainee" method="POST">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Trainee</label>
        <select
            class="form-control"
            id="exampleFormControlSelect1"
            name="traineeId"
          >
            <% trainees.forEach(function(trainee) { %>
            <option value="<%= trainee.id %>"><%= trainee.fullname %></option>
            <% }); %>
          </select>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Course</label>
        <select
            class="form-control"
            id="exampleFormControlSelect1"
            name="courseId"
          >
            <% courses.forEach(function(course) { %>
            <option value="<%= course.id %>"><%= course.name %></option>
            <% }); %>
          </select>
      </div>            
      
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  
</body>
</html>