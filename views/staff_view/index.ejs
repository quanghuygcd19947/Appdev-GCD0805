<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF"
      crossorigin="anonymous"
    />
  
</head>
<body>
  <div class="container-fluid">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          Trainee Accounts
        </h6>
      </div>
      <div class="card-body">
        <a href="/trainingStaff/createTrainee">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Create Trainee account
          </button>
        </a>
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">username</th>
                <th scope="col">Created At</th>
                <th scope="col">Updated At</th>
                <th scope="col">View</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% traineeAccounts.forEach(function(account) { %>
              <tr>
                <th scope="row"><%= account.id %></th>
                <td><%= account.username %></td>
                <td><%= account.createdAt %></td>
                <td><%= account.updatedAt %></td>
                
                <td>
                  <div>
                    <a href="/trainingStaff/viewAccount?id=<%= account.id %>">
                      <button type="button" class="btn btn-success btn-sm">
                        <i class="fas fa-user-edit"></i> View
                      </button>
                    </a>
                  </div>
                </td>
                <td>
                  <div>
                    <a href="/trainingStaff/updateTrainee/<%= account.id %>">
                      <button type="button" class="btn btn-primary btn-sm">
                        <i class="fas fa-user-edit"></i> Update
                      </button>
                    </a>
                  </div>
                </td>
                <td>
                  <div>
                    <a href="/trainingStaff/deleteAccount?id=<%= account.id %>">
                      <button type="button" class="btn btn-danger btn-sm">
                        <i class="fas fa-user-minus"></i> Delete
                      </button>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          Course Category
        </h6>
      </div>
      <div class="card-body">
        <a href="/trainingStaff/createcourseCategory">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Create Course Category
          </button>
        </a>
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% courseCategories.forEach(function(courseCategory) { %>
              <tr>
                <th scope="row"><%= courseCategory.id %></th>
                <td><%= courseCategory.name %></td>
                <td><%= courseCategory.description %></td>
                
                <td>
                  <div>
                    <a href="">
                      <button type="button" class="btn btn-danger btn-sm">
                        <i class="fas fa-user-minus"></i> Delete
                      </button>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          Courses
        </h6>
      </div>
      <div class="card-body">
        <a href="/trainingStaff/createCourse">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Create Course
          </button>
        </a>
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Course Category</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% courses.forEach(function(course) { %>
              <tr>
                <th scope="row"><%= course.id %></th>
                <td><%= course.name %></td>
                <td><%= course.description %></td>
                
                <td>
                  <div>
                    <a href="">
                      <button type="button" class="btn btn-danger btn-sm">
                        <i class="fas fa-user-minus"></i> Delete
                      </button>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          Trainer's Tasks
        </h6>
      </div>
      <div class="card-body">
        <a href="/trainingStaff/assignTrainer">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Assign Trainer to Course
          </button>
        </a>
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% trainerCourses.forEach(function(TrainerCourse) { %>
              <tr>
               
                <td><%= TrainerCourse.trainer.fullname %></td>
                <td><%= TrainerCourse.course.name %></td>
                
                <td>
                  <div>
                    <a href="/trainingStaff/removeTrainerTask/<%= TrainerCourse.trainerId %>/<%= TrainerCourse.courseId %>">
                      <button type="button" class="btn btn-danger btn-sm">
                        <i class="fas fa-user-minus"></i> Delete
                      </button>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          Trainee's Tasks
        </h6>
      </div>
      <div class="card-body">
        <a href="/trainingStaff/assignTrainee">
          <button type="button" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Assign Trainee to Course
          </button>
        </a>
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% traineeCourses.forEach(function(TraineeCourse) { %>
              <tr>
               
                <td><%= TraineeCourse.trainee.fullname %></td>
                <td><%= TraineeCourse.course.name %></td>
                
                <td>
                  <div>
                    <a href="">
                      <button type="button" class="btn btn-danger btn-sm">
                        <i class="fas fa-user-minus"></i> Delete
                      </button>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    


</body>
</html>

