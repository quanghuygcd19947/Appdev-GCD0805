<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Course Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
</head>
<body>
  <h1>Create Course</h1>
<div class="container">
  <form action="/trainingStaff/addCourse" method="POST">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        name="name"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Descriptions</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputPassword1"
        name="description"
      />
    </div>
    <div class="mb-3">
      <div class="form-group">
        <label for="exampleFormControlSelect1">Course Category</label>
        <select
          class="form-control"
          id="exampleFormControlSelect1"
          name="categoryId"
        >
          <% courseCategories.forEach(function(CourseCategory) { %>
          <option value="<%= CourseCategory.id %>"><%= CourseCategory.name %></option>
          <% }); %>
        </select>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">
      <i class="fas fa-check-circle"></i> Create
    </button>
    <!-- <a href="/trainingStaff/course">
      <button type="button" class="btn btn-secondary">
        <i class="fas fa-times-circle"></i> Cancel
      </button> -->
    </a>
  </form>
</div> 
</body>
</html>